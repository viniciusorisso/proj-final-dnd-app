<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    tools:context=".presentation.ui.sheet_roll_dice.RollDiceFragment"
    android:background="@color/primaryVariant"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/roll_dice_title"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/colorOnPrimary"
        android:textSize="22sp"
        >
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        app:layout_constraintTop_toBottomOf="@+id/roll_dice_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/roll_dice_value"
        android:textAlignment="center"
        android:textColor="@color/colorOnPrimary"
        android:textSize="28sp"
        >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/roll_dice_value"
        android:id="@+id/roll_dice_l1">

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:id="@+id/roll_dice_d4"
            android:backgroundTint="@color/primary"
            android:textColor="@color/colorOnPrimary"
            android:text="d4"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:id="@+id/roll_dice_d6"
            android:backgroundTint="@color/primary"
            android:textColor="@color/colorOnPrimary"
            android:text="d6" />
        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/roll_dice_d8"
            android:backgroundTint="@color/primary"
            android:textColor="@color/colorOnPrimary"
            android:text="d8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/roll_dice_l1">

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/primary"
            android:textColor="@color/colorOnPrimary"
            android:id="@+id/roll_dice_d10"
            android:text="d10" />
        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/primary"
            android:textColor="@color/colorOnPrimary"
            android:id="@+id/roll_dice_d12"
            android:text="d12" />
        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="@color/primary"
            android:textColor="@color/colorOnPrimary"
            android:id="@+id/roll_dice_d20"
            android:text="d20" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>